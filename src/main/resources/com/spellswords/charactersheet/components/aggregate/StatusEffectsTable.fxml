    <children>
        <AnchorPane>
            <Label text="Status Effects" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.leftAnchor="0.0" alignment="CENTER" styleClass="blackInverted"/>
