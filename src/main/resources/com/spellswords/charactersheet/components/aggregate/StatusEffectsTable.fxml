        <HBox spacing="5">
            <Label text="Effect" HBox.hgrow="ALWAYS" prefWidth="100" alignment="CENTER"/>
            <Label text="Severity" HBox.hgrow="ALWAYS" prefWidth="50" alignment="CENTER"/>
            <Label text="Consequences" HBox.hgrow="ALWAYS" prefWidth="164" alignment="CENTER"/>
            <Label text="FF?" HBox.hgrow="ALWAYS" prefWidth="50" alignment="CENTER"/>
            <Label text="Duration" HBox.hgrow="ALWAYS" prefWidth="100" alignment="CENTER"/>
