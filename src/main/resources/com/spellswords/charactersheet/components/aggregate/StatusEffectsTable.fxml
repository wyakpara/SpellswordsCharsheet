        <Status effect="Blinded"/>
        <Status effect="Confused"/>
        <Status effect="Crippled"/>
        <Status effect="Dazed"/>
        <Status effect="Dazzled"/>
        <Status effect="Deafened"/>
        <Status effect="Entranced"/>
        <Status effect="Fatigued"/>
        <Status effect="Hasted"/>
        <Status effect="Intoxicated"/>
        <Status effect="Invincible"/>
        <Status effect="Invisible"/>
        <Status effect="Paralyzed"/>
        <Status effect="Petrified"/>
        <Status effect="Prone"/>
        <Status effect="Rooted"/>
        <Status effect="Scared"/>
        <Status effect="Sickened"/>
        <Status effect="Staggered"/>
        <Status effect="Stunned"/>
        <Status effect="Vulnerable"/>
